<?xml version="1.0" encoding="utf-8"?>

<include>
  <context name="default">

    <extension name="callcard">
      <condition field="destination_number" expression="^8084$">
	<action application="answer"/>
	<action application="sleep" data="2000"/>
	<action application="socket" data="127.0.0.1:8084 sync full"/>
	<!--<action application="speak" data="You have ${duration} minutes to talk."/>-->
	<action application="transfer" data="${destination_number} XML default"/>
	<!--<action application="bridge" data="sofia/internal/${destination_number}@0.0.0.0"/>-->
      </condition>
    </extension>

  </context>
</include>
