  <!-- Announce folder. -->
  <macro name="announce_folder">
    <!-- This is here to prevent log warnings about no matches in the
         macro -->
    <input pattern="^(.*)$"><match></match></input>
    <input pattern="^0$">
      <match>
        <action function="play-file" data="vm-INBOX.wav"/> 
