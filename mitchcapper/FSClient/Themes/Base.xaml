	<SolidColorBrush Color="#FFE2E6E7" x:Key="GridBodyBGColor" />
	<SolidColorBrush Color="#FFBFC0C0" x:Key="GridRowBGColor" />
	<SolidColorBrush Color="#FFEDEDED" x:Key="GridAltRowBGColor" />
	<SolidColorBrush Color="White" x:Key="RowFGColor" />
	<SolidColorBrush Color="#FF00FFE2" x:Key="RowHighlightFGColor" />
	<SolidColorBrush Color="#FF1900D0" x:Key="GridRowSpecialFGColor" />
